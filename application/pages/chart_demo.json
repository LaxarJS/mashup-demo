{
   "layout": "application",

   "areas": {

      "header": [
         {
            "widget": "chart_demo/headline_widget",
            "features": {
               "headline": {
                  "htmlText": "ChartDemo"
               }
            }
         }
      ],

      "content1a": [
         {
            "widget": "chart_demo/headline_widget",
            "features": {
               "headline": {
                  "htmlText": "Spreadsheet Data Input",
                  "level": 2
               }
            }
         },
         {
            "widget": "chart_demo/table_editor_widget",
            "features": {
               "spreadsheet": {
                  "resource": "spreadsheetData"
               }
            }
         },
         {
            "widget": "chart_demo/data_provider_widget",
            "features": {

               "publish": {
                  "resource": "spreadsheetData",
                  "location": "application/data/example_data_1.json"
               },

               "display": {
                  "dataSets": [
                     {
                        "title": "Stock Value Example 1",
                        "description": "This example shows 4 series on yearly grid spanning 5 years.",
                        "location": "application/data/example_data_1.json"
                     },
                     {
                        "title": "Stock Value Example 2",
                        "description": "This example shows 10 series on yearly grid spanning 5 years.",
                        "location": "application/data/example_data_2.json"

                     },
                     {
                        "title": "Stock Value Example 3",
                        "description": "This example shows 4 series on yearly grid spanning 12 years.",
                        "location": "application/data/example_data_3.json"
                     },
                     {
                        "title": "Stock Value Example 4",
                        "description": "This example shows 4 series on monthly grid spanning 60 months.",
                        "location": "application/data/example_data_4.json"
                     }
                  ],
                  "submitButtonLabel": "Show"
               }
            }
         }
      ],

      "content1b": [
         {
            "widget": "chart_demo/headline_widget",
            "features": {
               "headline": {
                  "htmlText": "Spreadsheet Data",
                  "level": 2
               }
            }
         },
         {
            "widget": "chart_demo/chart_widget",
            "features": {
               "display": {
                  "resource": "spreadsheetData",
                  "chart": {}
               }
            }
         }
      ]
   }
}
