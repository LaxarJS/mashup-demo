{
   "layout": "application",

   "areas": {

      "header": [
         {
            "widget": "chart_demo/headline_widget",
            "features": {
               "headline": {
                  "htmlText": "MashupDemo"
               }
            }
         }
      ],

      "content1a": [
         {
            "widget": "chart_demo/data_provider_widget",
            "features": {

               "publish": {
                  "resource": "spreadsheetData",
                  "location": "application/data/stock_price_example_1.json"
               },

               "display": {
                  "htmlTitle": "<i class='fa fa-database'></i>Select a Data Source",
                  "dataSets": [
                     {
                        "title": "Stock Price Example 1",
                        "description": "This example shows 4 series on a grid spanning 5 years.",
                        "location": "application/data/stock_price_example_1.json"
                     },
                     {
                        "title": "Stock Price Example 2",
                        "description": "This example shows 10 series on a grid spanning 5 years.",
                        "location": "application/data/stock_price_example_2.json"

                     },
                     {
                        "title": "Stock Price Example 3",
                        "description": "This example shows 4 series on a grid spanning 12 years.",
                        "location": "application/data/stock_price_example_3.json"
                     },
                     {
                        "title": "Stock Price Example 4",
                        "description": "This example shows 4 series on a grid spanning 12 years.",
                        "location": "application/data/stock_price_example_4.json"
                     },
                     {
                        "title": "Stock Price Example 5",
                        "description": "This example shows 4 series on a grid spanning 50 years.",
                        "location": "application/data/stock_price_example_5.json"
                     }
                  ]
               }
            }
         },
         {
            "widget": "chart_demo/table_editor_widget",
            "features": {
               "htmlTitle": "<i class='fa fa-table'></i>Edit the Data",
               "timeSeries": {
                  "resource": "spreadsheetData"
               }
            }
         }
      ],

      "content1b": [
         {
            "widget": "chart_demo/chart_widget",
            "features": {
               "display": {
                  "resource": "spreadsheetData",
                  "chart": {
                  },
                  "htmlTitle": "<i class='fa fa-line-chart'></i>Line Chart"
               }
            }
         },
         {
            "widget": "chart_demo/chart_widget",
            "features": {
               "display": {
                  "resource": "spreadsheetData",
                  "chart": {
                     "type": "pieChart"
                  },
                  "htmlTitle": "<i class='fa fa-pie-chart'></i>Pie Chart",
                  "caption": "The average of all values of the time series."
               }
            }
         },
         {
            "widget": "chart_demo/chart_widget",
            "features": {
               "display": {
                  "resource": "spreadsheetData",
                  "chart": {
                     "type": "multiBarChart"
                  },
                  "htmlTitle": "<i class='fa fa-bar-chart'></i>Multi Bar Chart"
               }
            }
         }
      ]
   }
}
