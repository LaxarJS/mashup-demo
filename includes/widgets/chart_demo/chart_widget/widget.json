{
   "name": "ChartWidget",
   "description": "Widget to display a chart from time series data",
   "version": {
      "spec": "0.1.0"
   },

   "integration": {
      "type": "angular"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [ "display" ],
      "properties": {

         "display": {
            "type": "object",
            "description": "Provide the data to display in another widget.",
            "required": [ "resource", "chart" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "Name of the data resource",
                  "format": "topic"
               },
               "htmlTitle": {
                  "type": "string"
               },
               "caption": {
                  "type": "string"
               },
               "chart": {
                  "type": "object",
                  "description": "Set options for the chart representation.",
                  "properties": {
                     "type": {
                        "type": "string",
                        "default": "lineChart"
                     },
                     "height": {
                        "type": "number",
                        "default": 260
                     }
                  }
               }
            }
         }
      }

   }
}
