{
   "name": "TableEditorWidget",
   "description": "A widget that provides a spreadsheet-like content editor.",
   "version": {
      "spec": "0.1.0"
   },

   "integration": {
      "type": "angular"
   },

   "controls": [
      "laxar_uikit/controls/date_picker"
   ],

   "compatibility": [ "json-patch" ],

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [ "timeSeries" ],

      "properties": {
         "title": {
            "type": "object",
            "properties": {
               "htmlLabel": {
                  "type": "string",
                  "description": "Editable table title"
               }
            }
         },
         "timeSeries": {
            "type": "object",
            "description": "Shows the time series in an editable table.",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "Name of the data resource which should refer to a 2-dimensional array.",
                  "format": "topic"
               }
            }
         }
      }

   }
}
